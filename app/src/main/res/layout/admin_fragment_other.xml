<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end|center_vertical"
            android:text="@string/URL" />

        <EditText
            android:id="@+id/edt_url"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_edt_black"
            style="@style/EditTextStyle" />

        <Button
            android:id="@+id/btn_url_submit"
            style="@style/btn_pressed_style"
            android:layout_width="wrap_content"
            android:text="@string/set" />

        <Button
            android:id="@+id/btn_update"
            style="@style/btn_pressed_style"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/device_update" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end|center_vertical"
            android:text="@string/company_name" />

        <EditText
            android:id="@+id/edt_company"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_edt_black"
            style="@style/EditTextStyle"
            tools:text="九五软件科技有限公司" />

        <Button
            android:id="@+id/btn_company"
            style="@style/btn_pressed_style"
            android:layout_width="wrap_content"
            android:text="@string/submit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end|center_vertical"
            android:text="@string/meet_push_file" />

        <EditText
            android:id="@+id/edt_file"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/shape_edt_black"
            style="@style/EditTextStyle"
            tools:text="九五软件科技有限公司" />

        <Button
            android:id="@+id/btn_file_modify"
            style="@style/btn_pressed_style"
            android:layout_width="wrap_content"
            android:text="@string/modify" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/modify_local_password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#E7E7E7"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical|end"
                        android:text="@string/enter_old_password" />

                    <EditText
                        android:id="@+id/edt_old_pwd"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_edt_black"
                        android:ellipsize="end"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical|end"
                        android:text="@string/enter_new_password" />

                    <EditText
                        android:id="@+id/edt_new_pwd"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_edt_black"
                        android:ellipsize="end"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical|end"
                        android:text="@string/confirm_new_password" />

                    <EditText
                        android:id="@+id/edt_confirm_pwd"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_edt_black"
                        android:ellipsize="end"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit_modify"
                    style="@style/btn_pressed_style"
                    android:layout_width="150dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/submit_modify" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/change_interface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#E7E7E7"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_change_home"
                    style="@style/btn_pressed_style"
                    android:layout_width="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/change_home_interface" />
                <Button
                    android:id="@+id/btn_change_subbg"
                    style="@style/btn_pressed_style"
                    android:layout_width="150dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/change_home_subView_bg" />

                <Button
                    android:id="@+id/btn_change_pro"
                    style="@style/btn_pressed_style"
                    android:layout_width="150dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/change_pro_interface" />

                <Button
                    android:id="@+id/btn_change_bulletin"
                    style="@style/btn_pressed_style"
                    android:layout_width="150dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/change_bulletin_interface" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>