<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_vote_manage_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vote_selected_bg">

    <TextView
        android:id="@+id/item_vote_manage_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12" />

    <TextView
        android:id="@+id/item_vote_manage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/item_vote_manage_number"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="圣诞快乐解放路口（单选，不记名）" />

    <TextView
        android:id="@+id/item_vote_manage_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="已经结束" />

    <TextView
        android:id="@+id/item_vote_manage_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_vote_manage_answer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_vote_manage_title"
        tools:text="赞成 0票" />

    <TextView
        android:id="@+id/item_vote_manage_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_vote_manage_answer1"
        app:layout_constraintEnd_toStartOf="@+id/item_vote_manage_answer3"
        app:layout_constraintStart_toEndOf="@+id/item_vote_manage_answer1"
        tools:text="反对 0票" />

    <TextView
        android:id="@+id/item_vote_manage_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_vote_manage_answer1"
        app:layout_constraintEnd_toStartOf="@+id/item_vote_manage_answer4"
        app:layout_constraintStart_toEndOf="@+id/item_vote_manage_answer2"
        tools:text="弃权 0票" />

    <TextView
        android:id="@+id/item_vote_manage_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_vote_manage_answer1"
        app:layout_constraintEnd_toStartOf="@+id/item_vote_manage_answer5"
        app:layout_constraintStart_toEndOf="@+id/item_vote_manage_answer3"
        tools:text="d 0票" />

    <TextView
        android:id="@+id/item_vote_manage_answer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_vote_manage_answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_vote_manage_answer4"
        tools:text="e 0票" />
</android.support.constraint.ConstraintLayout>